          alert("비밀번호가 다릅니다");
          $("#pass").val("");
          $("#pass2").val("");
          $("#pass").focus();
          return false;
	 	};
		 
	 	//이메일 유효성 검사
	    if(!getMail.test($("#mail").val())){
	        alert("이메일 x")
	        $("#mail").val("");
	        $("#mail").focus();
	        return false;
	     };
	 	
